{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

<div class="container mt-5 mb-5"> 
    <h2>
       <centre> Welcome To Home Page </centre>
    </h2> 
<p align="right">
    <a class="btn btn-outline-dark "href="{{ path('create')}}"> Create New </a>
</p>
</div>
<div class="container">
    
    {% for message in app .flashes('notice') %}
    <div class="alert alert-success mt-4 mb-b"> {{ message }}</div>
    {% endfor %}

    <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
            {% for data in result %}
          <tr>
            <th scope="row">{{data.id}}</th>
            <td>{{data.title}}</td>
            <td>{{data.content}}</td>
            <td>
                <a class="btn btn-outline-warning" href="{{ path('update',{'id':data.id}) }}"> Update </a>
                <a class="btn btn-outline-danger" href="{{ path('delete',{'id':data.id})}}"> Delete </a>
            </td>
          </tr>

          {% endfor %}
        </tbody>
      </table>
</div>
{% endblock %}
